# Production environment variables for Vercel deployment

# Use demo data for Vercel (no SQLite persistence)
NEXT_PUBLIC_DATA_SOURCE=demo

# API endpoints - automatically set to your Vercel domain
NEXT_PUBLIC_API_BASE_URL=https://consultflow-front.vercel.app
NEXT_PUBLIC_DEMO_API_BASE_URL=https://consultflow-front.vercel.app/api/demo
NEXT_PUBLIC_VERCEL_API_BASE_URL=https://consultflow-front.vercel.app/api/vercel

# Disable debug and local DB in production
NEXT_PUBLIC_DEBUG_API=false
LOCAL_SQLITE_PATH=

# Vercel environment marker
VERCEL=1