# Data source switching
# Options: demo | localDb | frappe
NEXT_PUBLIC_DATA_SOURCE=localDb

# Local database API endpoint (used when DATA_SOURCE=localDb)
NEXT_PUBLIC_LOCAL_API_BASE_URL=http://localhost:3000/api/local

# Frappe backend API endpoint (used when DATA_SOURCE=frappe)
NEXT_PUBLIC_FRAPPE_API_BASE_URL=http://localhost:8000

# Local SQLite database file path for the interim backend (server-side only)
LOCAL_SQLITE_PATH=.data/consultflow.db

# Enable debug logging
NEXT_PUBLIC_DEBUG_API=false
